{% extends 'base.html.twig' %}

{% block title %}Reportes y Analítica - SpartaMGym{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }
        .stats-card {
            border: none;
            border-radius: 15px;
            transition: transform 0.3s;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-0">Reportes y Estadísticas</h2>
                <p class="mb-0 opacity-75">Visualiza el rendimiento y métricas de tu gimnasio</p>
            </div>
            <a href="{{ path('app_panel') }}" class="btn btn-light btn-rounded shadow-sm">
                <i class="bi bi-house me-2"></i>Inicio
            </a>
        </div>
    </div>

    <div class="container pb-5">
        <div class="row g-4">
            <!-- Gráficos Principales -->
            <div class="col-lg-8">
                <!-- Evolución de Ingresos -->
                <div class="card card-custom p-4 shadow-sm mb-4">
                    <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-graph-up-arrow me-2 text-primary"></i>Ingresos Mensuales</h5>
                    <div style="height: 300px;">
                        <canvas id="ingresosChart"></canvas>
                    </div>
                </div>

                <!-- Top Usuarios -->
                <div class="card card-custom p-4 shadow-sm">
                    <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-trophy me-2 text-warning"></i>Mejores Clientes</h5>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0">Usuario</th>
                                    <th class="border-0 text-center">Planes</th>
                                    <th class="border-0 text-end">Total Invertido</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in top_usuarios %}
                                <tr>
                                    <td class="fw-bold text-dark">{{ user.nombre }}</td>
                                    <td class="text-center"><span class="badge bg-light text-dark">{{ user.planes_comprados }}</span></td>
                                    <td class="text-end fw-bold text-success">${{ user.total_gastado|number_format(0, '.', ',') }}</td>
                                </tr>
                                {% else %}
                                <tr><td colspan="3" class="text-center text-muted">Sin datos registrados</td></tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Panel Lateral de Resumen -->
            <div class="col-lg-4">
                <div class="row g-4">
                    <!-- KPI Cards -->
                    <div class="col-12">
                        <div class="card stats-card bg-primary text-white p-4 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase small fw-bold opacity-75">Planes Vigentes</h6>
                                    <h2 class="fw-bold mb-0">{{ socios_activos }}</h2>
                                </div>
                                <i class="bi bi-people-fill h1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card stats-card bg-success text-white p-4 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase small fw-bold opacity-75">Ingresos Mes Actual</h6>
                                    <h2 class="fw-bold mb-0">${{ ingresos_mes_actual|number_format(0, '.', ',') }}</h2>
                                </div>
                                <i class="bi bi-currency-dollar h1 opacity-50"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Gráfico Circular Estado Planes -->
                    <div class="col-12">
                        <div class="card shadow-sm p-4 bg-white rounded-4 border-0">
                            <h6 class="fw-bold mb-3">Estado de Membresías</h6>
                            <div style="height: 250px; position: relative;">
                                <canvas id="estadoPlanesChart"></canvas>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card shadow-sm p-4 bg-white rounded-4 border-0">
                            <h6 class="fw-bold mb-3">Acciones Rápidas</h6>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary btn-sm text-start"><i class="bi bi-file-earmark-pdf me-2"></i>Exportar PDF</button>
                                <button class="btn btn-outline-success btn-sm text-start"><i class="bi bi-file-earmark-excel me-2"></i>Exportar Excel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cargar Chart.js desde los assets compilados -->
    <script src="{{ asset('build/chart.js/chart.umd.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Datos desde el controlador
            const ingresosData = {{ ingresos_chart|json_encode|raw }};
            const planesStats = {{ planes_stats|json_encode|raw }};

            // Gráfico de Ingresos (Línea)
            const ctxIngresos = document.getElementById('ingresosChart').getContext('2d');
            new Chart(ctxIngresos, {
                type: 'line',
                data: {
                    labels: ingresosData.labels,
                    datasets: [{
                        label: 'Ingresos Mensuales ($)',
                        data: ingresosData.data,
                        borderColor: '#4f46e5',
                        backgroundColor: 'rgba(79, 70, 229, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#ffffff',
                        pointBorderColor: '#4f46e5',
                        pointRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return '$ ' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [5, 5] },
                            ticks: {
                                callback: function(value) { return '$' + value.toLocaleString(); }
                            }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });

            // Gráfico de Estado de Planes (Dona)
            const ctxEstado = document.getElementById('estadoPlanesChart').getContext('2d');
            new Chart(ctxEstado, {
                type: 'doughnut',
                data: {
                    labels: ['Vigentes', 'Programados', 'Vencidos'],
                    datasets: [{
                        data: [planesStats.vigentes, planesStats.programados || 0, planesStats.vencidos],
                        backgroundColor: ['#10b981', '#f59e0b', '#ef4444'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
        });
    </script>
{% endblock %}
