{% extends 'base.html.twig' %}

{% block title %}Reportes y Analítica - SpartaMGym{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(135deg, #0f172a 0%, #1d4ed8 100%);
            color: white;
            padding: 2.2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 26px 26px;
            box-shadow: 0 28px 48px -36px rgba(15, 23, 42, 0.9);
        }
        .stats-card {
            border-radius: 18px;
            transition: transform 0.25s ease, box-shadow 0.25s ease;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        .stats-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 22px 30px -26px rgba(15, 23, 42, 0.9);
        }
        .card {
            border: 1px solid #dbe6f4;
            border-radius: 18px;
            background: rgba(255, 255, 255, 0.92);
        }
        .table {
            font-size: 0.84rem;
        }
        .table > :not(caption) > * > * {
            padding: 0.44rem 0.5rem;
            white-space: nowrap;
        }
        .report-users-list {
            max-height: 360px;
            overflow-y: auto;
        }
        .report-users-list .table {
            margin-bottom: 0;
        }
        #promedioSemanalChart {
            max-height: 320px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header shadow-sm">
        <div class="container-fluid px-3 px-lg-4 d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-0">Reportes y Estadísticas</h2>
                <p class="mb-0 opacity-75">Visualiza el rendimiento y métricas de tu gimnasio</p>
            </div>
        </div>
    </div>

    <div class="container-fluid px-3 px-lg-4 pb-5">
        <div class="row g-4">
            <!-- Gráficos Principales -->
            <div class="col-lg-8">
                <!-- Evolución de Ingresos -->
                <div class="card card-custom p-4 shadow-sm mb-4">
                    <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-graph-up-arrow me-2 text-primary"></i>Ingresos Mensuales</h5>
                    <div style="height: 300px;">
                        <canvas id="ingresosChart"></canvas>
                    </div>
                </div>

                <!-- Top socios -->
                <div class="card card-custom p-4 shadow-sm">
                    <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-trophy me-2 text-warning"></i>Socios destacados</h5>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0">Socio</th>
                                    <th class="border-0 text-center">Planes</th>
                                    <th class="border-0 text-end">Total Invertido</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for user in top_usuarios %}
                                <tr>
                                    <td class="fw-bold text-dark">{{ user.nombre }}</td>
                                    <td class="text-center"><span class="badge bg-light text-dark">{{ user.planes_comprados }}</span></td>
                                    <td class="text-end fw-bold text-success">${{ user.total_gastado|number_format(0, '.', ',') }}</td>
                                </tr>
                                {% else %}
                                <tr><td colspan="3" class="text-center text-muted">Sin datos registrados</td></tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card card-custom p-4 shadow-sm mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold mb-0 text-dark"><i class="bi bi-clock-history me-2 text-info"></i>Flujo horario de acceso</h5>
                        <small class="text-muted">Histórico de ingresos y salidas</small>
                    </div>
                    <div style="height: 300px;">
                        <canvas id="flujoHorarioChart"></canvas>
                    </div>
                </div>

                <div class="card card-custom p-4 shadow-sm mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                        <h5 class="fw-bold mb-0 text-dark"><i class="bi bi-gender-ambiguous me-2 text-primary"></i>Ingresos por hora según sexo</h5>
                        <small class="text-muted">
                            Pico mujeres: {{ access_gender_peaks.femenino ?? '--' }}
                            |
                            Pico hombres: {{ access_gender_peaks.masculino ?? '--' }}
                        </small>
                    </div>
                    <div style="height: 320px;">
                        <canvas id="ingresosSexoHoraChart"></canvas>
                    </div>
                </div>

                <div class="card card-custom p-4 shadow-sm mt-4">
                    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
                        <h5 class="fw-bold mb-0 text-dark"><i class="bi bi-person-lines-fill me-2 text-primary"></i>Promedio semanal por socio</h5>
                        <small class="text-muted">Selecciona un socio para ver llegada, salida y duracion promedio por dia</small>
                    </div>
                    <div class="table-responsive report-users-list">
                        <table class="table table-sm table-hover align-middle">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0">Socio</th>
                                    <th class="border-0">Cédula</th>
                                    <th class="border-0 text-end">Acción</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for socio in socios %}
                                    <tr>
                                        <td class="fw-semibold text-dark">{{ socio.nombre }}</td>
                                        <td>{{ socio.cedula }}</td>
                                        <td class="text-end">
                                            <button
                                                type="button"
                                                class="btn btn-sm btn-outline-primary open-weekly-average-btn"
                                                data-user-name="{{ socio.nombre }}"
                                                data-endpoint="{{ path('app_informe_usuario_promedio_semanal', {id: socio.id}) }}"
                                            >
                                                <i class="bi bi-bar-chart-line me-1"></i> Ver promedio
                                            </button>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="3" class="text-center text-muted">No hay socios registrados.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Panel Lateral de Resumen -->
            <div class="col-lg-4">
                <div class="row g-4">
                    <!-- KPI Cards -->
                    <div class="col-12">
                        <div class="card stats-card bg-primary text-white p-4 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase small fw-bold opacity-75">Planes Vigentes</h6>
                                    <h2 class="fw-bold mb-0">{{ socios_activos }}</h2>
                                </div>
                                <i class="bi bi-people-fill h1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card stats-card bg-success text-white p-4 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase small fw-bold opacity-75">Ingresos Mes Actual</h6>
                                    <h2 class="fw-bold mb-0">${{ ingresos_mes_actual|number_format(0, '.', ',') }}</h2>
                                </div>
                                <i class="bi bi-currency-dollar h1 opacity-50"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Gráfico Circular Estado Planes -->
                    <div class="col-12">
                        <div class="card shadow-sm p-4 bg-white rounded-4 border-0">
                            <h6 class="fw-bold mb-3">Estado de Membresías</h6>
                            <div style="height: 250px; position: relative;">
                                <canvas id="estadoPlanesChart"></canvas>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card shadow-sm p-4 bg-white rounded-4 border-0">
                            <h6 class="fw-bold mb-3">Acciones Rápidas</h6>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary btn-sm text-start"><i class="bi bi-file-earmark-pdf me-2"></i>Exportar PDF</button>
                                <button class="btn btn-outline-success btn-sm text-start"><i class="bi bi-file-earmark-excel me-2"></i>Exportar Excel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="promedioSemanalModal" tabindex="-1" aria-labelledby="promedioSemanalTitulo" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content border-0 shadow">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" id="promedioSemanalTitulo">Promedio semanal</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <p class="text-muted small mb-3" id="promedioSemanalResumen">Selecciona un socio para ver llegada, salida y duracion promedio por dia.</p>
                    <div style="height: 320px;">
                        <canvas id="promedioSemanalChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cargar Chart.js desde los assets compilados -->
    <script src="{{ asset('build/chart.js/chart.umd.js') }}"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Datos desde el controlador
            const ingresosData = {{ ingresos_chart|json_encode|raw }};
            const planesStats = {{ planes_stats|json_encode|raw }};
            const accessHourlyData = {{ access_hourly_chart|json_encode|raw }};
            const accessGenderHourlyData = {{ access_gender_hourly_chart|json_encode|raw }};

            // Gráfico de Ingresos (Línea)
            const ctxIngresos = document.getElementById('ingresosChart').getContext('2d');
            new Chart(ctxIngresos, {
                type: 'line',
                data: {
                    labels: ingresosData.labels,
                    datasets: [{
                        label: 'Ingresos Mensuales ($)',
                        data: ingresosData.data,
                        borderColor: '#4f46e5',
                        backgroundColor: 'rgba(79, 70, 229, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#ffffff',
                        pointBorderColor: '#4f46e5',
                        pointRadius: 6
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return '$ ' + context.parsed.y.toLocaleString();
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { borderDash: [5, 5] },
                            ticks: {
                                callback: function(value) { return '$' + value.toLocaleString(); }
                            }
                        },
                        x: {
                            grid: { display: false }
                        }
                    }
                }
            });

            // Gráfico de flujo horario (Ingresos vs Salidas)
            const ctxFlujoHorario = document.getElementById('flujoHorarioChart').getContext('2d');
            new Chart(ctxFlujoHorario, {
                type: 'line',
                data: {
                    labels: accessHourlyData.labels,
                    datasets: [
                        {
                            label: 'Ingresos',
                            data: accessHourlyData.ingresos,
                            borderColor: '#0ea5e9',
                            backgroundColor: 'rgba(14, 165, 233, 0.12)',
                            borderWidth: 2,
                            tension: 0.3,
                            fill: true
                        },
                        {
                            label: 'Salidas',
                            data: accessHourlyData.salidas,
                            borderColor: '#f97316',
                            backgroundColor: 'rgba(249, 115, 22, 0.12)',
                            borderWidth: 2,
                            tension: 0.3,
                            fill: true
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { precision: 0 }
                        }
                    }
                }
            });

            // Gráfico de ingresos por hora segmentado por sexo
            const ctxSexoHora = document.getElementById('ingresosSexoHoraChart').getContext('2d');
            new Chart(ctxSexoHora, {
                type: 'bar',
                data: {
                    labels: accessGenderHourlyData.labels,
                    datasets: [
                        {
                            label: 'Mujeres',
                            data: accessGenderHourlyData.femenino,
                            backgroundColor: 'rgba(236, 72, 153, 0.75)',
                            borderColor: '#db2777',
                            borderWidth: 1
                        },
                        {
                            label: 'Hombres',
                            data: accessGenderHourlyData.masculino,
                            backgroundColor: 'rgba(59, 130, 246, 0.75)',
                            borderColor: '#2563eb',
                            borderWidth: 1
                        },
                        {
                            label: 'Otro / Sin dato',
                            data: accessGenderHourlyData.otro,
                            backgroundColor: 'rgba(148, 163, 184, 0.75)',
                            borderColor: '#64748b',
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: { precision: 0 }
                        }
                    }
                }
            });

            // Gráfico de Estado de Planes (Dona)
            const ctxEstado = document.getElementById('estadoPlanesChart').getContext('2d');
            new Chart(ctxEstado, {
                type: 'doughnut',
                data: {
                    labels: ['Vigentes', 'Programados', 'Vencidos'],
                    datasets: [{
                        data: [planesStats.vigentes, planesStats.programados || 0, planesStats.vencidos],
                        backgroundColor: ['#10b981', '#f59e0b', '#ef4444'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });

            const weeklyButtons = document.querySelectorAll('.open-weekly-average-btn');
            const weeklyModalElement = document.getElementById('promedioSemanalModal');
            const weeklyTitleElement = document.getElementById('promedioSemanalTitulo');
            const weeklySummaryElement = document.getElementById('promedioSemanalResumen');
            const weeklyChartCanvas = document.getElementById('promedioSemanalChart');

            let weeklyAverageChart = null;
            const weeklyModal = weeklyModalElement && typeof bootstrap !== 'undefined'
                ? new bootstrap.Modal(weeklyModalElement)
                : null;

            const resetWeeklyChart = () => {
                if (weeklyAverageChart) {
                    weeklyAverageChart.destroy();
                    weeklyAverageChart = null;
                }
            };

            const renderWeeklyChart = (chartPayload) => {
                if (!weeklyChartCanvas) {
                    return;
                }

                const labels = Array.isArray(chartPayload.labels) ? chartPayload.labels : [];
                const llegadaHoras = Array.isArray(chartPayload.llegada_horas) ? chartPayload.llegada_horas : [];
                const salidaHoras = Array.isArray(chartPayload.salida_horas) ? chartPayload.salida_horas : [];
                const duracionHoras = Array.isArray(chartPayload.duracion_horas) ? chartPayload.duracion_horas : [];
                const llegadaLabel = Array.isArray(chartPayload.llegada_label) ? chartPayload.llegada_label : [];
                const salidaLabel = Array.isArray(chartPayload.salida_label) ? chartPayload.salida_label : [];
                const duracionLabel = Array.isArray(chartPayload.duracion_label) ? chartPayload.duracion_label : [];
                const sesiones = Array.isArray(chartPayload.sesiones) ? chartPayload.sesiones : [];

                const ctxWeekly = weeklyChartCanvas.getContext('2d');
                weeklyAverageChart = new Chart(ctxWeekly, {
                    type: 'bar',
                    data: {
                        labels,
                        datasets: [
                            {
                                type: 'line',
                                label: 'Llegada promedio',
                                data: llegadaHoras,
                                yAxisID: 'yHora',
                                borderColor: '#2563eb',
                                backgroundColor: '#2563eb',
                                borderWidth: 2,
                                pointRadius: 4,
                                tension: 0.25
                            },
                            {
                                type: 'line',
                                label: 'Salida promedio',
                                data: salidaHoras,
                                yAxisID: 'yHora',
                                borderColor: '#f97316',
                                backgroundColor: '#f97316',
                                borderWidth: 2,
                                pointRadius: 4,
                                tension: 0.25
                            },
                            {
                                type: 'bar',
                                label: 'Duracion promedio',
                                data: duracionHoras,
                                yAxisID: 'yDuracion',
                                backgroundColor: 'rgba(5, 150, 105, 0.6)',
                                borderColor: '#059669',
                                borderWidth: 1,
                                borderRadius: 8
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: { position: 'bottom' },
                            tooltip: {
                                callbacks: {
                                    label: (context) => {
                                        const sesionesDia = sesiones[context.dataIndex] || 0;
                                        if (context.dataset.label === 'Llegada promedio') {
                                            return `Llegada: ${llegadaLabel[context.dataIndex] || '--'} (${sesionesDia} sesiones)`;
                                        }
                                        if (context.dataset.label === 'Salida promedio') {
                                            return `Salida: ${salidaLabel[context.dataIndex] || '--'} (${sesionesDia} sesiones)`;
                                        }
                                        return `Duracion: ${duracionLabel[context.dataIndex] || '--'} (${sesionesDia} sesiones)`;
                                    }
                                }
                            }
                        },
                        scales: {
                            yHora: {
                                position: 'left',
                                beginAtZero: true,
                                min: 0,
                                max: 24,
                                ticks: {
                                    callback: (value) => `${String(Math.floor(value)).padStart(2, '0')}:00`
                                },
                                title: {
                                    display: true,
                                    text: 'Hora promedio'
                                }
                            },
                            yDuracion: {
                                position: 'right',
                                beginAtZero: true,
                                grid: {
                                    drawOnChartArea: false
                                },
                                ticks: {
                                    callback: (value) => `${value} h`
                                },
                                title: {
                                    display: true,
                                    text: 'Duracion promedio'
                                }
                            }
                        }
                    }
                });
            };

            weeklyButtons.forEach((button) => {
                button.addEventListener('click', async () => {
                    const endpoint = button.dataset.endpoint || '';
                    const userName = button.dataset.userName || 'Socio';

                    if (!endpoint) {
                        return;
                    }

                    if (weeklyTitleElement) {
                        weeklyTitleElement.textContent = `Promedio semanal de ${userName}`;
                    }
                    if (weeklySummaryElement) {
                        weeklySummaryElement.textContent = 'Cargando datos del socio...';
                    }

                    resetWeeklyChart();
                    if (weeklyModal) {
                        weeklyModal.show();
                    }

                    try {
                        const response = await fetch(endpoint, {
                            headers: {
                                'X-Requested-With': 'XMLHttpRequest'
                            }
                        });
                        const payload = await response.json();

                        if (!response.ok || payload.status !== 'success') {
                            throw new Error(payload.message || 'No fue posible cargar la información.');
                        }

                        const chartPayload = payload.chart || {};
                        const totalSesiones = Number(chartPayload.total_sesiones || 0);
                        const duracionGeneral = chartPayload.promedio_duracion_general_label || '--';

                        if (weeklySummaryElement) {
                            weeklySummaryElement.textContent = `Sesiones analizadas: ${totalSesiones} | Duracion promedio general: ${duracionGeneral}`;
                        }

                        renderWeeklyChart(chartPayload);
                    } catch (error) {
                        if (weeklySummaryElement) {
                            weeklySummaryElement.textContent = 'No se pudo cargar la gráfica.';
                        }

                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: error instanceof Error ? error.message : 'No se pudo cargar la gráfica del socio.'
                        });
                    }
                });
            });
        });
    </script>
{% endblock %}
