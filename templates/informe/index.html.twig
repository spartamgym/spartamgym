{% extends 'base.html.twig' %}

{% block title %}Reportes y Analítica - SpartaMGym{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }
        .stats-card {
            border: none;
            border-radius: 15px;
            transition: transform 0.3s;
        }
        .stats-card:hover {
            transform: translateY(-5px);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-0">Reportes y Estadísticas</h2>
                <p class="mb-0 opacity-75">Visualiza el rendimiento y métricas de tu gimnasio</p>
            </div>
            <a href="{{ path('app_panel') }}" class="btn btn-light btn-rounded shadow-sm">
                <i class="bi bi-house me-2"></i>Inicio
            </a>
        </div>
    </div>

    <div class="container pb-5">
        <div class="row g-4">
            <!-- Placeholder para Gráficos -->
            <div class="col-lg-8">
                <div class="card card-custom p-4 h-100 shadow-sm">
                    <h5 class="fw-bold mb-4 text-dark"><i class="bi bi-graph-up me-2 text-primary"></i>Actividad Reciente</h5>
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-bar-chart-steps display-1 opacity-25"></i>
                        <p class="mt-3">Gráficos de asistencia en desarrollo...</p>
                    </div>
                </div>
            </div>

            <!-- Panel Lateral de Resumen -->
            <div class="col-lg-4">
                <div class="row g-4">
                    <div class="col-12">
                        <div class="card stats-card bg-primary text-white p-4 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase small fw-bold opacity-75">Socios Activos</h6>
                                    <h2 class="fw-bold mb-0">--</h2>
                                </div>
                                <i class="bi bi-people-fill h1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card stats-card bg-success text-white p-4 shadow-sm">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-uppercase small fw-bold opacity-75">Ingresos Mes</h6>
                                    <h2 class="fw-bold mb-0">$ --</h2>
                                </div>
                                <i class="bi bi-currency-dollar h1 opacity-50"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="card shadow-sm p-4 bg-white rounded-4 border-0">
                            <h6 class="fw-bold mb-3">Acciones Rápidas</h6>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-primary btn-sm text-start"><i class="bi bi-file-earmark-pdf me-2"></i>Exportar PDF</button>
                                <button class="btn btn-outline-success btn-sm text-start"><i class="bi bi-file-earmark-excel me-2"></i>Exportar Excel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}