{% extends 'base.html.twig' %}

{% block title %}Gestión de Planes - SpartaMGym{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .page-header {
            background: linear-gradient(135deg, #ef4444 0%, #b91c1c 100%);
            color: white;
            padding: 2rem 0;
            margin-bottom: 2rem;
            border-radius: 0 0 20px 20px;
        }
        .card-custom {
            border: none;
            border-radius: 15px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
        .form-control:focus {
            box-shadow: 0 0 0 0.25rem rgba(239, 68, 68, 0.15);
            border-color: #ef4444;
        }
        .btn-rounded {
            border-radius: 10px;
        }
        .table-container {
            background: white;
            padding: 1.5rem;
            border-radius: 15px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="page-header shadow-sm">
        <div class="container d-flex justify-content-between align-items-center">
            <div>
                <h2 class="fw-bold mb-0">Catálogo de Planes</h2>
                <p class="mb-0 opacity-75">Configura las membresías y beneficios de tu gimnasio</p>
            </div>
            <a href="{{ path('app_panel') }}" class="btn btn-light btn-rounded shadow-sm">
                <i class="bi bi-house-door me-2"></i>Inicio
            </a>
        </div>
    </div>

    <div class="container pb-5">
        <div class="row g-4">
            <!-- Formulario de Registro -->
            <div class="col-lg-4">
                <div class="card card-custom shadow-sm h-100">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold mb-4" id="form-title">
                            <i class="bi bi-plus-circle me-2 text-danger"></i>Registrar Nuevo Plan
                        </h5>

                        <form id="form-plan">
                            <input type="hidden" id="id" name="id" value="0">
                            
                            <div class="mb-3">
                                <label for="nombre" class="form-label fw-semibold small">Nombre del Plan</label>
                                <input type="text" class="form-control" id="nombre" name="nombre" required placeholder="Ej: Membresía VIP">
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="precio" class="form-label fw-semibold small">Precio ($)</label>
                                    <div class="input-group">
                                        <span class="input-group-text bg-light text-muted border-end-0">$</span>
                                        <input type="number" class="form-control border-start-0" id="precio" name="precio" min="0" step="1" required placeholder="0">
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="tiempo" class="form-label fw-semibold small">Duración (Días)</label>
                                    <input type="number" class="form-control" id="tiempo" name="tiempo" required placeholder="30">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="max_beneficiarios" class="form-label fw-semibold small">Beneficiarios por venta</label>
                                <input type="number" class="form-control" id="max_beneficiarios" name="max_beneficiarios" min="1" step="1" value="1" required>
                                <div class="form-text small"><code>1</code> = plan individual, <code>2</code> o más = plan compartido.</div>
                            </div>

                            <div class="mb-4">
                                <label for="detalle" class="form-label fw-semibold small">Beneficios (Separados por coma)</label>
                                <textarea class="form-control" id="detalle" name="detalle" rows="4" placeholder="Acceso 24/7, Sauna, Entrenador..."></textarea>
                                <div class="form-text small">Describe los puntos clave del plan.</div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-danger fw-bold p-2 btn-rounded" id="btn-submit">
                                    <i class="bi bi-save me-2"></i>Guardar Plan
                                </button>
                                <button type="button" class="btn btn-link btn-sm mt-2 text-muted text-decoration-none" onclick="resetForm()">
                                    Cancelar / Limpiar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Listado de Planes -->
            <div class="col-lg-8">
                <div class="table-container shadow-sm h-100">
                    <h5 class="fw-bold mb-4">
                        <i class="bi bi-list-check me-2 text-dark"></i>Planes Vigentes
                    </h5>
                    
                    <table id="table_planes"
                           class="table"
                           data-url="{{ path('app_panel_planes_listar') }}"
                           data-toggle="table"
                           data-search="true"
                           data-pagination="true"
                           data-page-size="10"
                           data-classes="table table-hover"
                           data-header-style="headerStyle">
                        <thead>
                            <tr>
                                <th data-field="id" data-sortable="true" data-width="50">ID</th>
                                <th data-field="nombre" data-sortable="true">Nombre</th>
                                <th data-field="precio" data-sortable="true" data-formatter="priceFormatter">Precio</th>
                                <th data-field="tiempo" data-width="100" data-align="center">Días</th>
                                <th data-field="max_beneficiarios" data-width="130" data-align="center">Beneficiarios</th>
                                <th data-field="detalle" data-formatter="detailFormatter">Beneficios</th>
                                <th data-field="operate" data-align="center" data-width="120" data-formatter="accionesFormatter" data-events="operateEvents">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

<script>
    function headerStyle() {
        return { classes: 'bg-light fw-bold text-muted small text-uppercase' };
    }

    function priceFormatter(value) {
        return '<span class="fw-bold text-dark">$' + Number(value).toLocaleString() + '</span>';
    }

    function detailFormatter(value) {
        if (!value) return '';
        let items = value.split(',');
        return items.map(item => `<span class="badge bg-light text-dark border me-1 mb-1 small">${item.trim()}</span>`).join('');
    }

    function accionesFormatter() {
        return `
            <div class="btn-group shadow-sm">
                <button class="btn btn-white btn-sm editar border" title="Editar"><i class="bi bi-pencil-fill text-primary"></i></button>
                <button class="btn btn-white btn-sm eliminar border" title="Eliminar"><i class="bi bi-trash-fill text-danger"></i></button>
            </div>`;
    }

    window.operateEvents = {
        'click .editar': function (e, value, row) {
            document.getElementById('id').value = row.id;
            document.getElementById('nombre').value = row.nombre;
            document.getElementById('precio').value = row.precio;
            document.getElementById('tiempo').value = row.tiempo;
            document.getElementById('detalle').value = row.detalle;
            document.getElementById('max_beneficiarios').value = row.max_beneficiarios || 1;
            document.getElementById('form-title').innerHTML = '<i class="bi bi-pencil-square me-2 text-primary"></i>Editando Plan #' + row.id;
            document.getElementById('btn-submit').className = 'btn btn-primary fw-bold p-2 btn-rounded';
            window.scrollTo({ top: 0, behavior: 'smooth' });
        },
        'click .eliminar': function (e, value, row) {
            Swal.fire({
                title: '¿Eliminar plan?',
                text: `Esta acción afectará al plan "${row.nombre}".`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc3545',
                confirmButtonText: 'Sí, eliminar'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire('Información', 'La eliminación debe ser implementada en el controlador.', 'info');
                }
            })
        }
    };

    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('form-plan');
        form.addEventListener('submit', function(event) {
            event.preventDefault();
            const formData = new FormData(form);
            
            fetch('{{ path('app_panel_planes_crear') }}', { method: 'POST', body: formData })
            .then(response => response.json())
            .then(data => {
                if (data.status === 'success') {
                    Swal.fire({ icon: 'success', title: '¡Éxito!', text: data.message, timer: 2000 });
                    resetForm();
                    $('#table_planes').bootstrapTable('refresh');
                } else {
                    Swal.fire('Error', data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire('Error', 'No se pudo conectar con el servidor', 'error');
            });
        });
    });

    function resetForm() {
        document.getElementById('form-plan').reset();
        document.getElementById('id').value = 0;
        document.getElementById('max_beneficiarios').value = 1;
        document.getElementById('form-title').innerHTML = '<i class="bi bi-plus-circle me-2 text-danger"></i>Registrar Nuevo Plan';
        document.getElementById('btn-submit').className = 'btn btn-danger fw-bold p-2 btn-rounded';
    }
</script>
{% endblock %}
