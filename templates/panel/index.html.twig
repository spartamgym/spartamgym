{% extends 'base.html.twig' %}

{% block title %}Panel de Administración - SpartaMGym{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dashboard-header {
            background: linear-gradient(135deg, #0f172a 0%, #1d4ed8 100%);
            color: white;
            padding: 2.4rem 0;
            margin-bottom: 3rem;
            border-radius: 0 0 2.2rem 2.2rem;
            box-shadow: 0 30px 48px -36px rgba(15, 23, 42, 0.9);
            position: relative;
            overflow: hidden;
        }
        .dashboard-header::after {
            content: "";
            position: absolute;
            width: 260px;
            height: 260px;
            border-radius: 50%;
            background: radial-gradient(circle, rgba(125, 211, 252, 0.42) 0%, rgba(125, 211, 252, 0) 70%);
            right: -70px;
            top: -70px;
            pointer-events: none;
        }
        .admin-card {
            border-radius: 1.35rem;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            background: rgba(255, 255, 255, 0.94);
            overflow: hidden;
            height: 100%;
            border: 1px solid rgba(226, 232, 240, 0.92);
        }
        .admin-card:hover {
            transform: translateY(-8px) scale(1.01);
            box-shadow: 0 26px 48px -34px rgba(15, 23, 42, 0.66);
        }
        .icon-wrapper {
            width: 70px;
            height: 70px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 1rem;
            margin-bottom: 1.5rem;
            font-size: 2rem;
            color: white;
            box-shadow: 0 16px 26px -18px rgba(30, 41, 59, 0.7);
        }
        .bg-gradient-blue { background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%); }
        .bg-gradient-green { background: linear-gradient(135deg, #059669 0%, #10b981 100%); }
        .bg-gradient-orange { background: linear-gradient(135deg, #d97706 0%, #f59e0b 100%); }
        .bg-gradient-red { background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%); }
        .bg-gradient-dark { background: linear-gradient(135deg, #334155 0%, #1e293b 100%); }
        .bg-gradient-cyan { background: linear-gradient(135deg, #0284c7 0%, #06b6d4 100%); }
        .bg-gradient-indigo { background: linear-gradient(135deg, #1d4ed8 0%, #2563eb 100%); }
        .card-title {
            color: #1e293b;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        .card-text {
            color: #64748b;
            font-size: 0.9rem;
        }
        .admin-card .card-body {
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="dashboard-header">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="display-5 fw-bold mb-1">SpartaM<span class="text-primary">Gym</span></h1>
                    <p class="lead mb-0 opacity-75">Sistema integral de gestión del gimnasio</p>
                </div>
                <div class="text-end d-none d-md-block">
                    <span class="badge bg-primary px-3 py-2 rounded-pill mb-2">Administrador</span>
                    <div class="text-white-50 small">{{ "now"|date("d M, Y") }}</div>
                </div>
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <div class="row g-4">
            <!-- Panel en tiempo real -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_dashboard') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-blue mx-auto">
                                <i class="bi bi-grid-1x2-fill"></i>
                            </div>
                            <h5 class="card-title text-uppercase letter-spacing-1">Panel en tiempo real</h5>
                            <p class="card-text">Resumen general, métricas de rendimiento y estado del sistema.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Socios -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_usuario') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-green mx-auto">
                                <i class="bi bi-people-fill"></i>
                            </div>
                            <h5 class="card-title text-uppercase">Socios</h5>
                            <p class="card-text">Gestión de base de datos, perfiles y seguimiento de socios.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Reportes -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_informe') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-orange mx-auto">
                                <i class="bi bi-bar-chart-line-fill"></i>
                            </div>
                            <h5 class="card-title text-uppercase">Analítica</h5>
                            <p class="card-text">Informes detallados, asistencia y proyecciones financieras.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Control de Acceso Unificado -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_ingreso') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm border-bottom border-primary border-4">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-cyan mx-auto">
                                <i class="bi bi-arrow-left-right"></i>
                            </div>
                            <h5 class="card-title text-uppercase">Control de Acceso</h5>
                            <p class="card-text">Un solo escaneo registra ingreso o salida según estado actual del socio.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Planes -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_panel_planes') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-red mx-auto">
                                <i class="bi bi-tags-fill"></i>
                            </div>
                            <h5 class="card-title text-uppercase">Membresías</h5>
                            <p class="card-text">Configuración de paquetes, promociones y tarifas vigentes.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Gestión de Hardware -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_panel_targetas_ingreso') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-dark mx-auto">
                                <i class="bi bi-pci-card"></i>
                            </div>
                            <h5 class="card-title text-uppercase">Tarjetas RFID</h5>
                            <p class="card-text">Inventario y estado de dispositivos físicos de acceso.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Vinculaciones -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_panel_vincular_targeta') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-indigo mx-auto">
                                <i class="bi bi-link-45deg"></i>
                            </div>
                            <h5 class="card-title text-uppercase">Asignar tarjeta</h5>
                            <p class="card-text">Vincular identificadores físicos con perfiles de socios.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Inscripciones -->
            <div class="col-md-6 col-lg-4">
                <a href="{{ path('app_panel_vincular_usuarios_sin_plan') }}" class="text-decoration-none">
                    <div class="card admin-card p-4 shadow-sm">
                        <div class="card-body text-center">
                            <div class="icon-wrapper bg-gradient-indigo mx-auto">
                                <i class="bi bi-journal-plus"></i>
                            </div>
                            <h5 class="card-title text-uppercase">Inscripciones</h5>
                            <p class="card-text">Asignar planes de entrenamiento a socios registrados.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <footer class="text-center py-4 text-muted border-top bg-white mt-5">
        <div class="container">
            <small>&copy; {{ "now"|date("Y") }} SpartaMGym - Gestión profesional de gimnasio</small>
        </div>
    </footer>
{% endblock %}
