{% extends 'base.html.twig' %}

{% block title %}Control de Acceso - SpartaMGym{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .navbar-custom {
            display: none !important;
        }
        body {
            min-height: 100vh;
            background:
                radial-gradient(circle at 12% 18%, rgba(14, 165, 233, 0.18) 0%, transparent 34%),
                radial-gradient(circle at 88% 82%, rgba(59, 130, 246, 0.16) 0%, transparent 36%),
                linear-gradient(140deg, #f8fbff 0%, #eef3ff 52%, #e9f8ff 100%);
        }
        .checkin-wrapper {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.75rem;
            position: relative;
        }
        .checkin-card {
            border: none;
            border-radius: 24px;
            box-shadow: 0 28px 60px -30px rgba(30, 41, 59, 0.38);
            width: 100%;
            max-width: 510px;
            background: rgba(255, 255, 255, 0.96);
            overflow: hidden;
            backdrop-filter: blur(6px);
        }
        .checkin-header {
            background: linear-gradient(140deg, #0f172a 0%, #1d4ed8 100%);
            color: white;
            padding: 2.7rem 2.2rem 2.1rem;
            text-align: center;
        }
        .checkin-body {
            padding: 2.45rem 2.2rem;
        }
        .form-control-lg {
            border-radius: 12px;
            padding: 1rem;
            border: 2px solid #e2e8f0;
            text-align: center;
            font-weight: 700;
            letter-spacing: 2px;
        }
        .form-control-lg:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 0.2rem rgba(59, 130, 246, 0.18);
        }
        #response {
            border-radius: 12px;
            padding: 1rem;
            font-weight: 600;
            display: none;
        }
        .btn-dashboard-back {
            position: fixed;
            top: 1.2rem;
            right: 1.2rem;
            z-index: 20;
            border: 0;
            border-radius: 999px;
            padding: 0.72rem 1.05rem;
            font-weight: 700;
            color: #0f172a;
            text-decoration: none;
            background: rgba(255, 255, 255, 0.88);
            box-shadow: 0 12px 26px -18px rgba(15, 23, 42, 0.55);
            backdrop-filter: blur(8px);
            transition: transform .2s ease, box-shadow .2s ease, background-color .2s ease;
        }
        .btn-dashboard-back:hover {
            color: #0f172a;
            background: #ffffff;
            transform: translateY(-1px);
            box-shadow: 0 18px 30px -20px rgba(15, 23, 42, 0.6);
        }
        .btn-access-main {
            border: none;
            border-radius: 14px;
            background: linear-gradient(140deg, #2563eb 0%, #0ea5e9 100%);
            box-shadow: 0 15px 28px -18px rgba(37, 99, 235, 0.7);
        }
        .btn-access-main:hover {
            background: linear-gradient(140deg, #1d4ed8 0%, #0284c7 100%);
        }
        @media (max-width: 768px) {
            .btn-dashboard-back {
                top: 0.8rem;
                right: 0.8rem;
                padding: 0.62rem 0.9rem;
            }
            .checkin-wrapper {
                padding: 1rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <a href="{{ path('app_dashboard') }}" class="btn-dashboard-back">
        <i class="bi bi-arrow-left-short me-1"></i>Panel
    </a>
    <div class="checkin-wrapper">
        <div class="checkin-card">
            <div class="checkin-header">
                <i class="bi bi-shield-check display-1 mb-3 text-info"></i>
                <h3 class="fw-bold mb-1">Control de acceso</h3>
                <p class="mb-0 opacity-75 small text-uppercase fw-bold letter-spacing-1">Un escaneo registra entrada o salida automáticamente</p>
            </div>
            
            <div class="checkin-body">
                <form id="form">
                    <div class="mb-4">
                        <label for="id" class="form-label small fw-bold text-muted text-uppercase mb-2">Código de Socio / Tarjeta</label>
                        <input type="text" class="form-control form-control-lg shadow-sm" id="id" name="id" required autofocus autocomplete="off">
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold py-3 btn-access-main">
                        Registrar movimiento
                    </button>
                </form>

                <div id="response" class="mt-4 text-center"></div>
            </div>
        </div>
    </div>

<script>
    const form = document.getElementById('form');
    const responseDiv = document.getElementById('response');

    form.addEventListener('submit', async function(e) {
        e.preventDefault();
        const formData = new FormData(e.target);
        
        responseDiv.style.display = 'block';
        responseDiv.className = 'mt-4 text-center alert alert-light border text-muted animate__animated animate__fadeIn';
        responseDiv.textContent = 'Procesando...';

        try {
            const response = await fetch("{{ path('app_update_identificador_movimiento') }}", {
                method: 'POST',
                body: formData
            });

            const data = await response.json();
            
            if (data.status === 'success') {
                const isSalida = data.action === 'salida';
                responseDiv.className = 'mt-4 text-center alert alert-success border-0 shadow-sm fw-bold';
                Swal.fire({
                    icon: 'success',
                    title: isSalida ? 'Salida registrada' : '¡Bienvenido!',
                    text: data.message,
                    timer: 3000,
                    showConfirmButton: false
                });
            } else {
                responseDiv.className = 'mt-4 text-center alert alert-danger border-0 shadow-sm fw-bold';
                Swal.fire({
                    icon: 'error',
                    title: 'Acceso Denegado',
                    text: data.message
                });
            }
            responseDiv.textContent = data.message;
            form.reset();
            document.getElementById('id').focus();
        } catch (error) {
            console.error('Error:', error);
            responseDiv.className = 'mt-4 text-center alert alert-warning border-0';
            responseDiv.textContent = 'Error de conexión con el servidor';
        }
    });
</script>
{% endblock %}
